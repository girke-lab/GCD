<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <servlet>
    <servlet-name>QueryPageServlet</servlet-name>
    <servlet-class>QueryPageServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>index</servlet-name>
    <servlet-class>index.jsp</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SequenceServlet</servlet-name>
    <servlet-class>SequenceServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DetailsServlet</servlet-name>
    <servlet-class>DetailsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ClusterServlet</servlet-name>
    <servlet-class>ClusterServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>blastPage</servlet-name>
    <servlet-class>blastPage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>QueryPageServlet</servlet-name>
    <url-pattern>/QueryPageServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>index</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SequenceServlet</servlet-name>
    <url-pattern>/SequenceServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DetailsServlet</servlet-name>
    <url-pattern>/DetailsServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ClusterServlet</servlet-name>
    <url-pattern>/ClusterServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>blastPage</servlet-name>
    <url-pattern>/blastPage</url-pattern>
  </servlet-mapping>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>dataWeb</web-resource-name>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>database</role-name>
    </auth-constraint>
  </security-constraint>

  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name>Database Application</realm-name>
  </login-config>


</web-app>
